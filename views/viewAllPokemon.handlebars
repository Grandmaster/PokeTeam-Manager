<div class="container">
  <h1 class="viewPokemon">All Added Pokemon</h1>
  <table class="table is-bordered">
    <thead>
      <tr>
        <th>Sprite</th>
        <th>Pokemon</th>
        <th>PokeDex ID</th>
        <th>Type 1</th>
        <th>Type 2</th>
        <th>Ability</th>
        <th>On Team:</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each pokemons}}
      <tr>
        <td><a class="editOne" data-id={{id}}><img src="https://img.pokemondb.net/artwork/vector/{{pokemonName}}.png" alt="picture of {{pokemonName}}"></a></td>
        <td>{{nickname}}</td>
        <td>{{pokedexId}}</td>
        <td>{{pokeType1}}</td>
        <td>{{pokeType2}}</td>
        <td>{{abilities}}</td>
        <td>{{#each Teams}}{{teamName}}<br>{{/each}}</td>
        <td>
          <button class="deletePokemon" data-id={{id}}>Delete Pokemon</button>
          <button class="removeTeamAssociations" data-id={{id}}>Clear Linked Teams</button>
          <button class="editOne" data-id={{id}}>Edit Pokemon</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>