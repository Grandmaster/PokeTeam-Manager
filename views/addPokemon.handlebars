<div class="container align">
  {{!-- <div class="columns is-centered">
    <div class="column is-3"> --}}
  <form class="viewPokemon">
    <label class="field">
      <label class="label viewPokemon align">Pokemon Name or ID</label>
      <input type="text" class="input pokemonName" list="pokeJSON" id="pokeInput" placeholder="Enter a Pokemon Name or ID">
      <datalist id="pokeJSON">
      </datalist>
    </label>
    <div class="control align">
      <button class="button is-primary previewPokemon">Preview Your Pokemon!</button>
    </div>
    <div class="control align">
      <button class="button is-primary savePokemon">Save Your Pokemon</button>
    </div>
  </form>
</div>
<br>
<div class="columns is-centered">
  <div class="column is-3">
    <div class="card" id="pokeSelection">
      <div class="card-image align">
        <img />
      </div>
      <br>
      <div class="align"> 
        <h2 class="name align"></h2>
      </div>
      <div class="card-content">
        <h3><strong>Abilities: </strong></h3>
      </div>
      <div class="card-footer align">
        <p class="card-footer-item pokeID align"></p>
        <p class="card-footer-item typePreview align"></p>
      </div>
    </div>
  </div>
</div>